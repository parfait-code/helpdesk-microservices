{
  "info": {
    "name": "Helpdesk Microservices - Auth & User Integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "auth_url",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "user_url",
      "value": "http://localhost:3002",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth Service",
      "item": [
        {
          "name": "1. Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.accessToken) {",
                  "        pm.collectionVariables.set(\"access_token\", response.data.accessToken);",
                  "        console.log(\"Registration successful, token saved\");",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"postman@test.com\",\n  \"password\": \"Postman123!\",\n  \"confirmPassword\": \"Postman123!\"\n}"
            },
            "url": {
              "raw": "{{auth_url}}/api/auth/register",
              "host": ["{{auth_url}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "2. Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.accessToken) {",
                  "        pm.collectionVariables.set(\"access_token\", response.data.accessToken);",
                  "        console.log(\"Login successful, token saved\");",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"postman@test.com\",\n  \"password\": \"Postman123!\"\n}"
            },
            "url": {
              "raw": "{{auth_url}}/api/auth/login",
              "host": ["{{auth_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "3. Verify Token",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{auth_url}}/api/auth/verify",
              "host": ["{{auth_url}}"],
              "path": ["api", "auth", "verify"]
            }
          }
        },
        {
          "name": "4. Get Current User Info",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{auth_url}}/api/auth/me",
              "host": ["{{auth_url}}"],
              "path": ["api", "auth", "me"]
            }
          }
        },
        {
          "name": "Auth Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{auth_url}}/api/auth/health",
              "host": ["{{auth_url}}"],
              "path": ["api", "auth", "health"]
            }
          }
        }
      ]
    },
    {
      "name": "User Service",
      "item": [
        {
          "name": "5. Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{user_url}}/api/v1/users/profile",
              "host": ["{{user_url}}"],
              "path": ["api", "v1", "users", "profile"]
            }
          }
        },
        {
          "name": "6. Update User Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"phone\": \"+33123456789\",\n  \"bio\": \"Testeur Postman\"\n}"
            },
            "url": {
              "raw": "{{user_url}}/api/v1/users/profile",
              "host": ["{{user_url}}"],
              "path": ["api", "v1", "users", "profile"]
            }
          }
        },
        {
          "name": "User Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{user_url}}/api/v1/health",
              "host": ["{{user_url}}"],
              "path": ["api", "v1", "health"]
            }
          }
        }
      ]
    }
  ]
}
