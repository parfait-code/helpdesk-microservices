{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Authentication Service - Phase 1",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:check": "node scripts/check-db.js check",
    "db:create": "node scripts/check-db.js create",
    "db:init": "node scripts/init-db.js",
    "db:init-force": "node scripts/init-db.js --create-db",
    "db:seed": "node scripts/seed-db.js",
    "db:cleanup": "node scripts/cleanup.js",
    "db:migrate": "node scripts/migrate.js",
    "db:reset": "node scripts/check-db.js drop && node scripts/check-db.js create && npm run db:init && npm run db:seed",
    "db:fix": "node scripts/fix-db.js fix",
    "db:diagnose": "node scripts/fix-db.js diagnose"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "path-to-regexp": "^8.2.0",
    "pg": "^8.16.3",
    "redis": "^5.6.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.1.0",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  }
}
