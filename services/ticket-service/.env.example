# Ticket Service Environment Configuration

# Server Configuration
PORT=3003
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://ticket:ticketpass@localhost:5403/ticket_db
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=30000
DB_CONNECT_TIMEOUT=2000

# Redis Configuration
REDIS_URL=redis://localhost:6303
REDIS_TICKET_TTL=1800
REDIS_TICKET_LIST_TTL=300
REDIS_USER_INFO_TTL=3600

# External Services
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
FILE_SERVICE_URL=http://localhost:3004
NOTIFICATION_SERVICE_URL=http://localhost:3005

# Service Timeouts (ms)
AUTH_SERVICE_TIMEOUT=5000
USER_SERVICE_TIMEOUT=5000
FILE_SERVICE_TIMEOUT=10000
NOTIFICATION_SERVICE_TIMEOUT=5000

# File Service Integration
ENABLE_FILE_SERVICE=false
MOCK_FILE_SERVICE=true

# Notification Service Integration
ENABLE_NOTIFICATIONS=false
MOCK_NOTIFICATIONS=true

# Security
JWT_SECRET=your-jwt-secret-key-here
API_RATE_LIMIT=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/ticket-service.log

# Kafka Configuration (if using)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ticket-service
KAFKA_GROUP_ID=ticket-service-group
