{
  "name": "file-service",
  "version": "1.0.0",
  "description": "File Service for Helpdesk Microservices Architecture - Phase 3",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "verify": "node scripts/verify-service.js",
    "health": "curl http://localhost:3004/api/v1/health || echo 'Service not running'",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^2.1.35",
    "minio": "^7.1.3",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.1",
    "redis": "^4.6.7",
    "sharp": "^0.32.1",
    "uuid": "^9.0.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "eslint": "^8.44.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js",
      "!src/database.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  },
  "keywords": [
    "microservice",
    "helpdesk",
    "file-service",
    "minio",
    "storage"
  ],
  "author": "",
  "license": "ISC"
}
